@model ShoppingAssistantAI.Models.Entities.Product

@{
    ViewBag.Title = "Ürün Detayı";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <img src="https://via.placeholder.com/500x350?text=@Model.Name" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Kategori:</strong> @Model.Category</p>
            <p><strong>Fiyat:</strong> @Model.Price ₺</p>
            <p><strong>Etiketler:</strong> @Model.Tags</p>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="mt-3">@Model.Description</p>
            }

            <!-- Sepete Ekle Butonu -->
            <button onclick="showToast('@Model.Name')" class="btn btn-success mt-3">Sepete Ekle</button>

            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary mt-3 ms-2">← Geri Dön</a>
        </div>
    </div>
</div>

<!-- Toast Kutusu -->
<div id="toast"
     style="position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            display: none;
            box-shadow: 0px 4px 12px rgba(0,0,0,0.2);
            z-index: 9999;">
</div>

<!-- Toast Script -->
<script>
    function showToast(name) {
        const toast = document.getElementById("toast");
        toast.innerText = `${name} sepete eklendi!`;
        toast.style.display = "block";
        setTimeout(() => toast.style.display = "none", 2000);
    }
</script>
