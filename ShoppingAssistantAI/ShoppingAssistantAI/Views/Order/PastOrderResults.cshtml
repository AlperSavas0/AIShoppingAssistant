@model List<ShoppingAssistantAI.Models.DTOs.PastOrderResult>
@{
    ViewBag.Title = "Geçmiş Siparişlerde Bulunan Ürünler";
}

<div class="container my-5">
    <h2 class="mb-4">🧾 Geçmiş Siparişlerden Bulunan Ürünler</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">@ViewBag.Error</div>
    }

    @if (ViewBag.RawTags != null)
    {
        <div class="alert alert-secondary mb-3">
            <strong>AI Tags:</strong> @ViewBag.RawTags <br />
            <strong>AI Categories:</strong> @ViewBag.RawCategories
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Herhangi bir eşleşme bulunamadı.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex">
                            <img src="https://via.placeholder.com/120x90?text=@item.Product.Name"
                                 class="rounded me-3" alt="@item.Product.Name" />
                            <div>
                                <h5 class="card-title">@item.Product.Name</h5>
                                <p class="mb-1"><strong>Kategori:</strong> @item.Product.Category</p>
                                <p class="mb-1"><strong>Son Satın Alma:</strong> @item.LastPurchasedAt.ToString("dd MMM yyyy")</p>
                                <p class="mb-2"><strong>Kaç kez alındı:</strong> @item.TimesPurchased</p>
                                <a href="@Url.Action("Details", "Product", new { id = item.Product.ID })" class="btn btn-sm btn-outline-primary">
                                    Ürün Detayı
                                </a>
                                <a href="@Url.Action("Details", "Order", new { id = item.LastOrderID })" class="btn btn-sm btn-outline-secondary ms-2">
                                    Son Siparişe Git
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
